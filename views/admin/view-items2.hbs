<section>
    {{!-- <div class="container"> --}}
        <div class="row">
         
            <table id="myTable" class="display collapsed dataTable display dtr-inline nowrap">
                <thead>
                    <tr>
                        {{!-- <th scope="col">No.</th> --}}
                        <th scope="col">Name</th>
                        <th scope="col">Genre</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        {{!-- <th scope="row">{{this.no}}</th> --}}
                        <td>{{this.name}}</td>
                        <td>{{this.genre}}</td>
                        <td style="font-size: 0.8em;">
                            <p class="description">{{this.description}}</p>
                        </td>
                        <td><img src="/poster-images/{{this._id}}.png" alt="" style="width:1.5em; height:3em;"
                                srcset="{{this.picture}}"></td>
                        <td><a href="/admin/edit-item/{{this._id}}" class="btn btn-success font01">Edit</a></td>
                        <td> <a href="/admin/delete-item/{{this._id}}" class="btn btn-danger font01"
                                onclick="return confirm('Confirm Deletion for {{this.name}} ?')">Delete</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
     
    {{!-- </div> --}}
</section>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
    //$(function () {
    //   $('#myTable').DataTable();
    //});
</script>
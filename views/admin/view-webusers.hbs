<section class="">
    <div class="container align-items-center ">
        <div class="row">
            <h1 class="glorius white-text text-center mx-auto">{{#if message}} {{message}} {{else}} All WebUsers {{/if}}</h1>
        </div>
        <hr>
        {{#if message}}
        <p class="text-center text-white font01" id="message">You're not a SuperAdmin to perform this action,To gain
            access for this page,Kindly Contact Your Superior.
        </p>
        {{else}}
        <p class="text-center text-white font01" id="message">Listing Total of {{webusers.count}} Webusers from Database</p>
        {{#each webusers}}
        <div class="row m-2 mb-3">
            <div class="col-12 p-3 mx-auto p-3" style="border: 1px solid var(--text-main);
            max-width: 36rem; background: linear-gradient(var(--tile-color1),var(--tile-color2)); border-radius: 30px;">
                <div class="float-left">
                <p class="font01 text-white" style="font-weight: 700;">{{this.name}}</p>
                <p class="font01 text-white" style="font-weight: 600;">Email ID: {{this.email}}</p>
                <p class="font01 text-white">UserId: {{this._id}}</p>
                {{#if this.admin}}
                <p class="badge badge-success font01">Admin</p>
                {{else}}
                <p class="badge font01"
                        style="background-color: var(--badge-order); color:var(--badge-text)">Not Admin</p>
                {{/if}}
                </div>

                <div class="float-right">
                <p class="font01 text-white p-1">
                    <a href="/admin/edit-user/{{this._id}}" class="btn btn-success font01" >
                    <img src="/images/pencil-alt.png" alt="edit" style="width: 1.5rem; height:1.5rem;"></a>
                </p>
                <p class="font01 text-white p-1">
                    <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger font01"
                        onclick="return confirm('Confirm Deletion for {{this.name}} ?')">
                        <img src="/images/delIcon.png" alt="delete" style="width: 1.5rem; height:1.5rem;"></a>
                </p> 
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</section>
{{/if}}
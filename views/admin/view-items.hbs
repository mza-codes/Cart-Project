<section class="">
    <div class="container align-items-center ">
        <div class="row">
            {{!-- <a href="#"><button class="btn-warning m-5">Add Data</button></a> --}}
            <a href="/admin/add-item" class="btn btn-warning ml-auto mt-3 font01">Add Item</a>
        </div>
        <table class="table table-striped font01 text-white table-borderless mt-3">
            <thead>
                <tr>
                    {{!-- <th scope="col">No.</th> --}}
                    <th scope="col">Name</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Remove</th>


                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{!-- <th scope="row">{{this.no}}</th> --}}
                    <td>{{this.name}}</td>
                    <td>{{this.genre}}</td>
                    <td style="font-size: 0.8em;">
                        <p class="description">{{this.description}}</p>
                    </td>
                    <td><img src="/poster-images/{{this._id}}.png" alt="" style="width:1.5em; height:3em;"
                            srcset="{{this.picture}}"></td>
                    <td><a href="/admin/edit-item/{{this._id}}" class="btn btn-success font01">Edit</a></td>
                    <td> <a href="/admin/delete-item/{{this._id}}" class="btn btn-danger font01"
                            onclick="return confirm('Confirm Deletion for {{this.name}} ?')">Delete</a></td>


                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>
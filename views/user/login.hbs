                        <label for="password" class="form-text p-1">Password</label>
                        <input type="password" name="password" class="form-text form-area mx-auto text-center"
                        style="width: 65%;" required>
                        <br>
                        <button type="submit" class="font01 mx-auto btn-dark mb-3 p-1">LogIn</button><br>
                        {{#if logInErr}}
                            <p class="font01" style="color:red">{{logInErr}}</p>
                        {{/if}}
                        <hr>
                        <a href="/signup" class="font01 mt-3" style="">Create New Account ?</a> 
                        <br><br>
                    
                    </form>
                </div>
            </div>
        </div><hr>
    </div>

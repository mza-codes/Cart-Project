<section>
    <div class="container">
        <div class="row">
            <div class="col-12">

                <h3 class="voga text-center mt-3 p-3 text-white">Please Provide a Reason for Cancellation:</h3>
                <hr>
                <div class=" m-auto ">
                    <form action="/cancel-order/" method="post" id="" class="text-center pt-2">
                        <label class="form-text text-white" style="font-weight: 900; font-size: larger;">Reason For
                            Cancellation</label>
                        <p class="font01 text-white"><input type="radio" name="reason" class="m-1" required 
                        value="Similar Item Purchased">Ordered Similar Item</p>
                        
                        <p class="font01 text-white"><input type="radio" name="reason" class="m-1" required 
                        value="Shipping Delay">Delayed Delivery</p>

                        <p class="font01 text-white"><input type="radio" name="reason" class="m-1" required 
                        value="Order Exists">Duplicate Order</p>

                        <p class="font01 text-white"><input type="radio" name="reason" class="m-1" required 
                        value="Expensive">Expensive</p>
                        
                        <hr>
                        <label for="COD" class="font01 m-1 text-white" style="font-weight: 900; font-size: larger;">Description</label><br>
                        <textarea type="radio" cols="26" name="otherReason" style="border-radius:20px ;" class="m-2 font01 text-center p-3" placeholder="Optional"></textarea>
                        <input type="text" hidden name="userId" value="{{user._id}}">
                        <input type="text" hidden name="orderId" value="{{orderId}}">
                        <input type="text" hidden name="payment" value="{{order.payment}}">
                        <input type="text" hidden name="orderDate" value="{{order.date}}">
                        <input type="text" hidden name="paymentStat" value="{{order.status}}">
                        {{#each order.products}}
                        <input type="text" hidden name="proId" value="{{this.item}}">
                        {{/each}}
                        <input type="text" hidden name="totalCost" value="{{order.totalAmount}}">
                        
                        <hr>
                        <button type="submit" class="font01 mx-auto btn-success mb-3 ">Submit</button><br>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>